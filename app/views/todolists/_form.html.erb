<% if @todolist.errors.present? %>
<ul>
  <% @todolist.errors.each do |error, message| %>
    <li>
      <%="#{error.capitalize} #{message}"%></li>
  <% end %>
</ul>
<% end %>
<div class="form container">
<%= form_for @todolist do |f| %>
  <div class="form-group">
    <%= f.label :name, "Name" %>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <%= f.label :expired_date, "Expired_date" %>
    <%= f.text_field :expired_date %>
  </div>
  <div class="form-group">
    <%= f.label :note, "Note" %>
    <%= f.text_area :note %>
  </div> 

  <%= f.submit "Create" %>
</div>
<% end %>